<div class="panel">
	<div class="panel-header">
		<h1>책</h1>
	</div>
	<!--/.panel-header-->

   	<div class="panel-body padTopNone">
	   	<div class="row-col">
		   	<div class="col-4">
			   <img src="" style="width: 100%;"/>
		   	</div>
			<!--/.col-4-->
	   		<div class="col-2">
                <div class="row-col">
                    <dvi class="col-2">
                        <label>실명</label>
                        <div class="input"><%=author.name%>&nbsp;</div>
                    </div>
                    <br />
                    <div class="col-2">
                        <label>작가명</label>
                        <div class="input">
