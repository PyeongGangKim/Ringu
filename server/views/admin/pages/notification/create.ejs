<%- include("../../templates/head"); %>
<div class="row">
    <div class="col-lg-12">
        <hr />
        <h2 id="api_create_book">단행본 등록</h2>
        <form method="POST" action="/admin/notification/" >
            <p> member_type을 고르세요 </p>
            <div class="form-group">
                <input type="radio" id= "all" class="form-control" name="member_type" value="0"/>
                <label>전체 사용자</label>
            </div>
            <div class="form-group">
                <input type="radio" id= "author" class="form-control" name="member_type" value="1"/>
                <label>작가에게만</label>
            </div>
            <p>noti_type을 고르세요</p>
            <div class="form-group">
                <input type="radio" id= "important" class="form-control" name="noti_type" value="3"/>
                <label>주요 공지</label>
            </div>
            <div class="form-group">
                <input type="radio" id= "normal" class="form-control" name="noti_type" value="3"/>
                <label>일반 공지</label>
            </div>
            <div class="form-group">
                <label>공지 제목</label>
                <input type="text" class="form-control" name="noti_title" value="">
            </div>
            <div class="form-group">
                <label>공지 내용</label>
                <input type="text" class="form-control" name="noti_content" value= "">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


