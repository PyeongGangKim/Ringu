<%- include("../../templates/head"); %>
<div class="row">
    <div class="col-lg-12">
        <hr />
        <h2 id="api_create_book">연재본 커버 등록</h2>
        <form method="POST" action="/admin/account/<%=account.id%>/transfer" enctype ="application/x-www-form-urlencoded">
            <div class="form-group">
                <label>이름</label>
                <input type="text" class="form-control" name="name" value="<%=account.author.author.name%>" readonly />
            </div>
            <div class="form-group">
                <label>은행</label>
                <input type="text" class="form-control" name="bank" value="<%=account.author.author.bank_bank.bank%>" readonly />
            </div>
            <div class="form-group">
                <label>계좌번호</label>
                <input type="text" class="form-control" name="price" value="<%=account.author.author.account%>" readonly/>
            </div>
            <div class="form-group">
                <label>요청 금액</label>
                <input type="number" class="form-control" name="request_withdrawal_amount" value="<%=account.request_withdrawal_amount%>" readonly />
            </div>
            <div class="form-group">
                <label>보낸 금액</label>
                <input type="number" class="form-control" name="sent_money" value="<%=account.request_withdrawal_amount%>">
            </div>
            <button type="submit" class="btn btn-primary">출금 완료하기</button>
        </form>
    </div>
</div>


<%- include("../../templates/foot"); %>
