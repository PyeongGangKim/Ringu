<%- include("../templates/head"); %>

<div class="panel">
    <div class="panel-header">
        <h1>리뷰(조회: <%=total_count%>)</h1>

        <form method="GET" action="/admin/review/" class="panel-options input-inline">
            <input type="text" class="input" name="member_id" value="<%=member_id%>" placeholder="구매자 ID"/>
            <input type="text" class="input" name="book_id" value="<%=book_id%>" placeholder="책 ID"/>
            <input type="number" class="input text-center" name="limit" value="<%=limit%>" placeholder="개수" style="width: 60px;"/>
            <button type="submit" class="btn btn-success" style="height: 23px;">검색</button>
            <a href="/admin/review/">
                <div class="btn" id="filter-clear">초기화</div>
            </a>
        </form>
        <!--/.panel-options-->
    </div>
    <!--/.panel-header-->

    <div class="panel-body padTopNone">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 60px;">#</th>
                    <th style="width: 120px;">구매자</th>
                    <th style="width: 200px;">책</th>
                    <th style="width: 60px;">점수</th>
                    <th style="width: 250px;">내용</th>
                    <th style="width: 100px;"></th>
                </tr>
            </thead>
            <tbody>
                <% if (!review_list.length) { %>
                    <tr>
                        <td colspan="6" class="text-center">조회 되는 결과가 없습니다.</td>
                    </tr>
                <% } %>
                <% review_list.forEach(function(review, index) { %>
                    <tr>
                        <td class="text-center"><%=review.id%></td>
                        <td class="text-center">
                            <%=review.reviewer%>
                        </td>
                        <td class="text-center">
                            <%=review.book%>
                        </td>
                        <td class="text-center">
                            <%=review.score%>
                        </td>
                        <td class="text-left">
                            <%=review.description%>
                        </td>

                        <td class="menu">
                            <a href="/admin/review/view/<%=review.id%>">
                                <div class="menu-item">
                                    보기
                                </div>
                                <!--/.menu-item-->
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <!--/.panel-body-->

    <div class="panel-block text-center">
        <%- pagination_html%>
    </div>
    <!--/.panel-block-->
</div>
<!--/.panel-->

<%- include("../templates/foot"); %>
