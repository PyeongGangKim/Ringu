<%- include("../templates/head"); %>

<div class="panel">
	<div class="panel-header">
		<h1>회원</h1>
	</div>
	<!--/.panel-header-->

   	<div class="panel-body padTopNone">
	   	<div class="row-col">
		   	<div class="col-4">
			   <img src="" style="width: 100%;"/>
		   	</div>
			<!--/.col-4-->
	   		<div class="col-2">
                <div class="row">
                    <label>이메일</label>
                    <div class="input"><%=member_info["email"]%>&nbsp;</div>
                </div>
                <br />
